<!--miniprogram/pages/singleCategory/singleCategory.wxml-->

<!-- 同种类商品版块 -->
<view class="section goods-list">
	<block wx:for="{{itemList}}" wx:key="index" wx:for-item="product">
		<view class="goods-item">
			<image class="goods-img {{product.sold_out?'sold-out':''}} {{product.on_sale?'on-sale':''}}" src="{{product.img}}" data-pid="{{product.id}}" mode="aspectFill" bindtap="showDetail"/>
			<text class="title">{{product.name}}</text>
			<text class="price">${{product.price}}</text>
		</view>
	</block>
</view>

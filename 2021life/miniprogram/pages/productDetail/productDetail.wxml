<!--miniprogram/pages/productDetail/productDetail.wxml-->
<text>miniprogram/pages/productDetail/productDetail.wxml</text>
<view class="product-detail-container">
  <view class="swiper-container">
    <swiper class="product-swiper" indicator-dots="true">
      <block wx-for="{{swiperImg}}">
        <swiper-item>
          <image src="{{item}}" class="swiper-img"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

<view class="product-info"></view>
</view>
